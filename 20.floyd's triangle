#include <stdio.h>   
int main()  
{  
    int rows, i, j;
    int count = 1;   
   
    printf( " Enter the number of rows: \n");  
    scanf( "%d", &rows);  
	printf( "Floyd's triangle in c\n");
    for (i = 1; i <= rows; i++)  
    {  
    
     
        for (j = 1; j <= i; j++)  
        {  
        
            // print the number
            printf(" %d", count); 
            count++;  
        }  
        printf( "\n");  
    }
    return 0;   
   }
